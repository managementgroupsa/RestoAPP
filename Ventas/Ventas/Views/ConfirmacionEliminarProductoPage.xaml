<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoPLUS.Views.ConfirmacionEliminarProductoPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="¿Desea quitar el producto de la lista?" />
            <Button Text="Sí" Clicked="OnSiClicked" BackgroundColor="Green" />
            <Button Text="No" Clicked="OnNoClicked" BackgroundColor="DarkRed" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>